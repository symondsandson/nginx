[Unit]
Description=A high performance web server and a reverse proxy server
After=network.target

[Service]
Type=forking
PIDFile=<%= node['nginx']['pid'] %>
ExecStartPre=<%= node['nginx']['binary'] %> -t
ExecStart=<%= node['nginx']['binary'] %>
ExecReload=<%= node['nginx']['binary'] %> -s reload
ExecStop=-/sbin/start-stop-daemon --quiet --stop --retry QUIT/5 --pidfile <%= node['nginx']['pid'] %>
TimeoutStopSec=5
KillMode=mixed

[Install]
WantedBy=multi-user.target
